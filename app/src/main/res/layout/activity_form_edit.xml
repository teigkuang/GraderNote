<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tearhan.graderform.activity.FormEditActivity">

    <TextView
        android:id="@+id/tv_title_form_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="创建进阶表"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_title_form_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入表名"
        android:singleLine="true"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_content_form_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:hint="请输入详情简介"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_confirm_form_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_cancel_form_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
